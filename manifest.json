{
  "manifest_version": 2,

  "name": "Netfix",
  "description": "Adds ratings to Netflix",
  "version": "0.1",

  "icons": {
    "16": "res/icon.png",
    "48": "res/icon.png",
    "128": "res/icon.png"
  },

  "background": {
    "scripts": [
      "lib/hot-reload.js",
      "lib/jquery-3.2.1.min.js",
      "js/bg.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["*://www.netflix.com/*"],
      "css": ["css/netfix.css"],
      "js": [
        "lib/underscore-min.js",
        "lib/rate_limit.js",
        "lib/jquery-3.2.1.min.js",
        "lib/jquery.visible.min.js",
        "lib/jquery-observe.js",
        "js/utils.js",
        "js/cardfactory.js",
        "js/netflixapi.js",
        "js/tmdbapi.js",
        "js/fixer.js"
      ]
    }
  ],

  "permissions": [
    "management"
  ]
}
